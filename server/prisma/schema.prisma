generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id               String         @id @default(uuid())
  username         String         @unique
  email            String         @unique
  password         String
  name             String
  role             String         @default("STUDENT")
  resetToken       String?
  resetTokenExpiry DateTime?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  enrollments      Enrollment[]
  profile          Profile?
  refreshTokens    RefreshToken[]
  auditLogs        AuditLog[]
  taughtCourses    Course[]       @relation("InstructorCourses")
  submissions      Submission[]
  programId        String?
  program          Program?       @relation(fields: [programId], references: [id])
  invoices         Invoice[]
}

model Profile {
  id      String  @id @default(uuid())
  bio     String?
  phone   String?
  address String?
  userId  String  @unique
  user    User    @relation(fields: [userId], references: [id])
}

model Course {
  id          String          @id @default(uuid())
  code        String          @unique
  name        String
  description String?
  credits     Int             @default(3)
  instructorId String?
  instructor   User?          @relation("InstructorCourses", fields: [instructorId], references: [id])
  level       Int             @default(100)
  semester    Int             @default(1)
  assignments Assignment[]
  schedule    ClassSchedule[]
  enrollments Enrollment[]
  modules     Module[]
  announcements Announcement[]
  departmentId  String?
  department    Department?     @relation(fields: [departmentId], references: [id])
  programs      Program[]
}

model Enrollment {
  id         String   @id @default(uuid())
  userId     String
  courseId   String
  grade      String?
  progress   Int      @default(0)
  enrolledAt DateTime @default(now())
  course     Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id])

  @@unique([userId, courseId])
}

model ClassSchedule {
  id        String @id @default(uuid())
  courseId  String
  day       String
  startTime String
  endTime   String
  room      String
  type      String
  course    Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  revoked   Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Assignment {
  id          String   @id @default(uuid())
  title       String
  description String?
  dueDate     DateTime
  courseId    String
  status      String   @default("PENDING")
  grade       String?
  fileUrl     String?  // URL to download assignment instructions/files
  submissions Submission[]
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@index([courseId])
}

model Submission {
  id          String   @id @default(uuid())
  content     String   // URL or text
  feedback    String?
  grade       String?
  submittedAt DateTime @default(now())
  
  assignmentId String
  studentId    String

  assignment   Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  student      User       @relation(fields: [studentId], references: [id])

  @@unique([assignmentId, studentId])
  @@index([studentId])
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String
  action    String
  resource  String
  details   String?
  ipAddress String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Announcement {
  id        String   @id @default(uuid())
  title     String
  content   String
  type      String   @default("academic") // academic, system, event
  targetRole String? // STUDENT, STAFF, or null for all
  createdAt DateTime @default(now())
  expiresAt DateTime?
  courseId  String?
  course    Course?  @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model Module {
  id          String       @id @default(uuid())
  title       String
  description String?
  order       Int          @default(0)
  courseId    String
  course      Course       @relation(fields: [courseId], references: [id], onDelete: Cascade)
  items       ModuleItem[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([courseId])
}

model ModuleItem {
  id        String   @id @default(uuid())
  title     String
  type      String   // VIDEO, PDF, LINK, TEXT
  content   String   // URL or Text content
  order     Int      @default(0)
  moduleId  String
  module    Module   @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([moduleId])
}

model Department {
  id        String    @id @default(uuid())
  name      String    @unique
  code      String    @unique
  programs  Program[]
  courses   Course[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Program {
  id           String     @id @default(uuid())
  name         String
  code         String     @unique
  departmentId String
  department   Department @relation(fields: [departmentId], references: [id])
  students     User[]
  courses      Course[]
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model Fee {
  id          String   @id @default(uuid())
  name        String
  description String?
  amount      Float
  currency    String   @default("USD")
  type        String   // TUITION, LIBRARY, FACILITY, etc.
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  invoices    Invoice[]
}

model Invoice {
  id        String    @id @default(uuid())
  studentId String
  student   User      @relation(fields: [studentId], references: [id])
  feeId     String
  fee       Fee       @relation(fields: [feeId], references: [id])
  amount    Float
  dueDate   DateTime
  status    String    @default("PENDING") // PENDING, PAID, OVERDUE, PARTIAL
  payments  Payment[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([studentId])
}

model Payment {
  id            String   @id @default(uuid())
  invoiceId     String
  invoice       Invoice  @relation(fields: [invoiceId], references: [id])
  amount        Float
  method        String   // CARD, CASH, BANK_TRANSFER
  transactionId String?
  paymentDate   DateTime @default(now())
  status        String   @default("COMPLETED")

  @@index([invoiceId])
}
